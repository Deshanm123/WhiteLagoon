@model WhiteLagoon.Web.ViewModels.RegisterVm;


<section class="h-100 h-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-8 col-xl-6">
                <div class="card rounded-3" style="border:0;">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img3.webp"
                         class="w-100" style="border-top-left-radius: .3rem; border-top-right-radius: .3rem;"
                         alt="Sample photo">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Registration Info</h3>

                        <form class="px-md-2" method="POST" asp-controller="Account" asp-action="Register">

                        <input hidden asp-for="@Model.RedirectionUrl" />
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input asp-for="@Model.Name" class="form-control form-control-lg" />
                                        <label class="form-label" asp-for="@Model.Name"></label>
                                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input type="text" asp-for="@Model.Email" class="form-control form-control-lg" />
                                        <label class="form-label" asp-for="@Model.Email"></label>
                                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input  asp-for="@Model.Password" class="form-control form-control-lg" />
                                        <label class="form-label" asp-for="@Model.Password"></label>
                                        <span asp-validation-for="@Model.Password" class="text-danger" />
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input  asp-for="@Model.ConfirmPassword" class="form-control form-control-lg" />
                                        <label class="form-label" asp-for="@Model.ConfirmPassword"></label>
                                        <span asp-validation-for="@Model.ConfirmPassword" class="text-danger" />
                                    </div>
                                </div>
                            </div>

                            <div class="form-outline mb-4">
                                <input  asp-for="@Model.PhoneNumeber" class="form-control form-control-lg" />
                                <label class="form-label" asp-for="@Model.PhoneNumeber"></label>
                                <span asp-validation-for="@Model.PhoneNumeber" class="text-danger" />
                            </div>

                            <div class="form-outline mb-4">
                                <select asp-for="@Model.Role" class="form-control form-control-lg" >
                                    <option value= "" selected>Please select a role</option>
                                    @foreach (var role in @Model.RoleSelectList)
                                    {
                                        <option value="@role.Value">@role.Text</option>
                                    }
                                </select>
                                <span asp-validation-for="@Model.RoleSelectList" class="text-danger" />
                            </div>


                            <button type="submit" class="btn btn-success btn-lg mb-1">Submit</button>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
