@model WhiteLagoon.Web.ViewModels.LoginVm;


<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-5 text-black">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                    <form method="POST" asp-controller="Account" asp-action="Login" style="width: 23rem;">
                        <input hidden asp-for="@Model.RedirectionUrl" />
                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Log in</h3>

                        <div class="form-outline mb-4">
                            <input type="email" asp-for="@Model.Email" class="form-control form-control-lg" />
                            <label class="form-label" asp-for="@Model.Email"></label>
                            <span asp-validation-for="@Model.Email"   class="text-danger"/>
                        </div>

                        <div class="form-outline mb-4">
                            <input type="password" asp-for="@Model.Password" class="form-control form-control-lg" />
                            <label class="form-label" asp-for="@Model.Password"></label>
                            <span asp-validation-for="@Model.Password"   class="text-danger"/>

                        </div>
                        <div class="form-outline mb-4">
                            <input type="checkbox" asp-for="@Model.RememberMe" class="d-inline" />
                            <label class="form-label" asp-for="@Model.RememberMe"></label>
                        </div>

                        <div class="pt-1 mb-4">
                            <button class="btn btn-info btn-lg btn-block" type="submit">Login</button>
                        </div>

                        <p class="small mb-5 pb-lg-2"><a class="text-muted" href="#!">Forgot password?</a></p>

                        @if (@Model.RedirectionUrl == "/")
                        {
                            <p>Don't have an account? <a asp-controller="Account" asp-action="Register" class="link-info">Register here</a></p>
                        }
                        else
                        {
                            <p>Don't have an account? <a asp-controller="Account" asp-action="Register" asp-route-ReturnUrl="@Model.RedirectionUrl" class="link-info">Register here</a></p>

                         }

                    </form>

                </div>

            </div>
            <div class="col-sm-7 px-0 d-none d-sm-block">
               <img src="/img/login-canvas-guava-house-sri-lanka-feature.jpg" 
                     alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}