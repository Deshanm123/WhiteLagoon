 @using  WhiteLagoon.Domain.Entities
 @model IEnumerable<Amenity>

 <a  asp-Controller="Amenity" asp-action="Create" class="btn btn-block btn-primary">Create New Amnity</a>
<table class="table table-responsive">
    <thead>
        <tr>
            <th scope="col" class="col-4">Name</th>
            <th scope="col" class="col-6">Description</th>
            <th scope="col" class="col-2"></th>
           
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    <a asp-controller="Amenity" asp-action="Update" asp-route-amenityId="@item.Id" class="px-3"><i class="bi bi-pencil"></i></a>
                    <a asp-controller="Amenity" asp-action="Delete" asp-route-amenityId="@item.Id" class="px-3"><i class="bi bi-trash"></i></a>
                </td

            </tr>
        }
    </tbody>

</table>
