@* @model WhiteLagoon.Web.ViewModels.RadialBarChartVm; *@
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 mol-xl-8 mt-2">
            @* bookings *@
            <div class="card">
                <div class="card-body">

                    <div id="bookings-radial-chart" data-radialColors="#1D2B53">
                        </div>

                        <div>
                            <p class="text-muted mb-6" id="bar-chart-label"></p>
                            <h4 class="my-1">
                                <span id="TotalBookingCount">40</span>
                            </h4>
                        </div>

                        <p class="text-muted mt-3 mb-0" id="sectionBookingCount">Count</p>

                        <div class="justify-content-center text-center chart-spinner"  style="display:none;">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>

                </div>
            </div>
            @* users *@
            <div class="card">
                <div class="card-body">

                    <div id="users-radial-chart" data-radialColors="#ff8c00">
                    </div>

                    <div>
                        <p class="text-muted mb-6" id="bar-chart-label"></p>
                        <h4 class="my-1">
                            <span id="TotalUsersCount"></span>
                        </h4>
                    </div>

                    <p class="text-muted mt-3 mb-0" id="sectionUsersCount">Count</p>

                    <div class="justify-content-center text-center chart-spinner" style="display:none;">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>

                </div>
            </div>
                @* revenue *@
            <div class="card">
                <div class="card-body">

                    <div id="revenue-radial-chart" data-radialColors="#7E2553">
                    </div>

                    <div>
                        <p class="text-muted mb-6" id="bar-chart-label"></p>
                        <h4 class="my-1">
                            <span id="TotalRevenueCount"></span>
                        </h4>
                    </div>

                    <p class="text-muted mt-3 mb-0" id="sectionRevenueCount">Revenue</p>

                    <div class="justify-content-center text-center chart-spinner" style="display:none;">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        @* piechart *@
        <div class="col-md-12 mol-xl-4 mt-2">
            <div class="card">
                <div class="card-body">

                    <div id="bookings-pie-chart" data-radialColors="#06d6a0,#ffd166">
                    </div>

                    <div class="justify-content-center text-center chart-spinner" style="display:none;">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>

                </div>
            </div>
         </div>
    </div>
</div>

@section scripts {

    <script src="~/js/apexcharts/initialize-charts-loading.js" asp-append-version="true"></script>

    @* radial-chart-functions *@
    <script src="~/js/apexcharts/loading-radial-charts.js" asp-append-version="true" ></script>
    <script src="~/js/apexcharts/radial-chart-functions.js" asp-append-version="true"></script>

    @* pie-chart *@
    <script src="~/js/apexcharts/loading-pie-chart.js" asp-append-version="true"></script>
}